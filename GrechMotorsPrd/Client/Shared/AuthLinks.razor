<AuthorizeView>
    <Authorized>
        <nav class="grid align-items-center">
            <div class="row">
                <div class="col">
                    <div class="nav-item px-2 fs-6">
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                             @context.User.Identity.Name
                        </NavLink>
                    </div>
                </div>
            </div>
        </nav>
    </Authorized>
    <NotAuthorized>
        <nav class="grid align-items-center">
            <div class="row">
                <div class="col">
                    <div class="nav-item px-2 fs-6">
                        <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                            <span class="oi oi-account-login" aria-hidden="true"></span> Login
                        </NavLink>
                    </div>
                </div>
            </div>
        </nav>
    </NotAuthorized>
</AuthorizeView>
